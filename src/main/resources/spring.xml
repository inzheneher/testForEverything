<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="spring.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="Ivan Johnov"/>
    </bean>

    <bean id="eventLogger" class="spring.ConsoleEventLogger" />

    <bean id="app" class="spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="spring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateInstance"/>
        </constructor-arg>
    </bean>
    
    <bean id="printer" class="spring.IPrinterImpl"/>

</beans>